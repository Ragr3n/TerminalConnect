{
  "name": "terminal-connect",
  "displayName": "Terminal Connect",
  "description": "Connect via SSH or telnet to hosts defined in a yaml file directly in VSCode",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminalConnect",
          "title": "Terminal Connect",
          "icon": "$(remote)"
        }
      ]
    },
    "views": {
      "terminalConnect": [
        {
          "id": "terminalConnectTree",
          "name": "Terminal Connect",
          "icon": "$(remote)"
        }
      ]
    },
    "commands": [
      {
        "command": "terminalConnect.openTerminal",
        "title": "Terminal Connect: Open Terminal to Host"
      },
      {
        "command": "terminalConnect.refresh",
        "title": "Terminal Connect: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "terminalConnect.searchConnections",
        "title": "Terminal Connect: Search Connections",
        "icon": "$(search)"

      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "terminalConnect.refresh",
          "group": "navigation"
        },
        {
          "command": "terminalConnect.searchConnections",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Terminal Connect",
      "properties": {
        "terminalConnect.sshConnectionString": {
          "type": "string",
          "default": "ssh {variables} {host}",
          "description": "Format string for opening an SSH connection. Use {host}, {port}, and {variables} as placeholders."
        },
        "terminalConnect.telnetConnectionString": {
          "type": "string",
          "default": "telnet {variables} {host}",
          "description": "Format string for opening a Telnet connection. Use {host}, {port}, and {variables} as placeholders."
        },
        "terminalConnect.extraYamlFiles": {
          "type": "array",
          "description": "List of extra YAML files (relative to workspace or absolute) to load connections from.",
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ragr3n/vscode-ssh-extension.git"
  }
}
